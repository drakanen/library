<Window x:Class="Library.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="26,239,0,0" VerticalAlignment="Top" Width="75" Click="btnAddBook"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="176,239,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelBook"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="131,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="txtAuthor" HorizontalAlignment="Left" Height="23" Margin="131,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="txtGenre" HorizontalAlignment="Left" Height="23" Margin="131,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="txtIsbn" HorizontalAlignment="Left" Height="23" Margin="131,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="txtDescrption" HorizontalAlignment="Left" Height="98" Margin="29,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="244"/>
        <Label x:Name="lblName" Content="Book Name" HorizontalAlignment="Left" Margin="37,5,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblAuthor" Content="Author" HorizontalAlignment="Left" Margin="59,33,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblGenre" Content="Genre" HorizontalAlignment="Left" Margin="59,61,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblIsbn" Content="ISBN" HorizontalAlignment="Left" Margin="66,89,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDescription" Content="Description" HorizontalAlignment="Left" Margin="39,110,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
